class Solution {
public:
    void subsequence(int index, vector<int>& arr, vector<int>& temp, vector<vector<int>>& ans) {
        ans.push_back(temp);

        for (int i = index; i < arr.size(); i++) {
            // we are doing this to remove the duplicate elements in the array.
            if (i > index && arr[i] == arr[i - 1]) continue;
            temp.push_back(arr[i]);
            subsequence(i + 1, arr, temp, ans);
            temp.pop_back();
        }
    }

    vector<vector<int>> findSubsets(vector<int>& arr) {
        // sortinng the array will helps us to identify the dupplicate.
        sort(arr.begin(), arr.end()); 
        vector<vector<int>> ans;
        vector<int> temp;

        subsequence(0, arr, temp, ans);
        return ans;
    }
};
