class Solution {
  public:
    int lowerBound(vector<int>& arr, int target) {
        int low = 0;
        int high = arr.size();
        
        while (low < high) {
            int mid = low + (high - low) / 2;
            
            if (arr[mid] < target)
                low = mid + 1;   // move right
            else
                high = mid;      // move left (mid might be answer)
        }
        
        return low;  // gives correct lower bound index
    }
};
