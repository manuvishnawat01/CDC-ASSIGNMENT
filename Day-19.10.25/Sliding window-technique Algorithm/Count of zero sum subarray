class Solution {
public:
    int findSubarray(vector<int> &arr) {
        unordered_map<long long, int> freq;
        long long sum = 0;
        int count = 0;

        for(int i = 0; i < arr.size(); i++) {
            sum += arr[i];

            if(sum == 0) count++;

            if(freq.find(sum) != freq.end())
                count += freq[sum];

            freq[sum]++;
        }
        return count;
    }
};
